{
	"name": "copyOnpremData",
	"properties": {
		"activities": [
			{
				"name": "CopyOnpremtoBlob",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "FileSystemSource",
						"recursive": true
					},
					"enableStaging": false,
					"dataIntegrationUnits": 0
				},
				"inputs": [
					{
						"referenceName": "LocalDatafile",
						"type": "DatasetReference",
						"parameters": {
							"fileid": {
								"value": "@pipeline().parameters.fileId",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"fileId": {
				"type": "String",
				"defaultValue": "1"
			}
		}
	}
}